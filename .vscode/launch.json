  "version": "0.2.0",
  "configurations": [
    {
            "name": "(Ödev 1) Debug",
            "type": "cppdbg",
            "request": "launch",
            // tasks.json'da oluşturduğumuz SABİT .exe'yi çalıştır
            "program": "${workspaceFolder}/w4/odev1/projem.exe",
            "args": [],
            "stopAtEntry": false,
            // Projenin ana klasörü
            "cwd": "${workspaceFolder}/w4/odev1",
            "environment": [],
            // 'true' yap ki scanf falan düzgün çalışsın
            "externalConsole": false, 
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
            // tasks.json'daki 'label' ile AYNI ismi çağır
            "preLaunchTask": "C/C++: gcc.exe build project", 
            "setupCommands": [
                {
                    "description": "gdb için düzgün yazdırmayı etkinleştir",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
