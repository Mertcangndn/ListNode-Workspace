{
    "version": "2.0.0",
    "tasks": [
        {
            // İsim önemli değil, launch.json ile aynı olsun yeter
            "label": "C/C++: gcc.exe build project", 
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Hangi dosya açık olursa olsun, klasördeki TÜM .c dosyalarını al
                "${workspaceFolder}/w4/odev1/*.c", 
                "-o",
                // Çıktı adını HER ZAMAN buna sabitle
                "${workspaceFolder}/w4/odev1/projem.exe" 
            ],
            "options": {
                // Çalışma dizinini de sabitle
                "cwd": "${workspaceFolder}/w4/odev1" 
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build the entire odev1 project."
        }
    ]
}